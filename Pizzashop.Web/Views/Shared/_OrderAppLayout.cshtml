@{
    Func<string, string> IsSelected = (controller) =>
    {
        if (ViewContext?.RouteData?.Values["controller"]!.ToString() == controller)
        {
            return "active-order-app";
        }
        return string.Empty;
    };
}

@using System.Security.Claims
@{
    var Role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/orderapp.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

</head>

<body>

    <div class="container-fluid m-0 p-0">



        <div class="header d-flex justify-content-between">


            <div class="left-side d-flex align-items-center justify-content-between">

                <div class="orderApp-logo d-flex align-items-center">
                    <img src="/images/logos/pizzashop_logo.png" alt="" class="ms-2 bg-white rounded-circle">
                    <span class="ms-2 fs-5 text-white">PIZZASHOP</span>
                </div>

            </div>

            <div class="right-side d-flex align-items-center">

                <div class="orderapp-icon-div">

                    <a class="orderapp-icon @IsSelected("KOT") text-white" href="/kot/index"><i
                            class="fa-solid fa-clipboard me-2"></i>KOT</a>

                    <a class="text-white orderapp-icon @IsSelected("WaitingList")" href="/WaitingList/index"><i
                            class="fa-regular fa-clock me-2"></i>Waiting List</a>

                    <a class="text-white orderapp-icon @IsSelected("Table")" href="/table/index"><i
                            class="fa-solid fa-square me-2 ms-1"></i>Tables</a>

                    <a class="text-white orderapp-icon @IsSelected("OrderAppMenu")" href="/orderappmenu/menu"><i
                            class="fa-solid fa-bell-concierge me-2"></i>Menu</a>

                </div>

                <div class="dropdown dropdown-for-responsive">
                    <a class="text-white me-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-bars"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li class=""><a class="text-dark @IsSelected("KOT")" href="/kot/index"><i
                                    class="fa-solid fa-clipboard me-2 ms-1"></i>KOT</a></li>
                        <li class="my-1"><a class="text-dark @IsSelected("WaitingList")" href="/WaitingList/index"><i
                                    class="fa-regular fa-clock me-2 ms-1"></i>Waiting List</a></li>
                        <li class=""><a class="text-dark @IsSelected("Table")" href="/table/index"><i
                                    class="fa-solid fa-square me-2 ms-1"></i>Tables</a></li>
                        <li class="my-1"><a class="text-dark @IsSelected("OrderAppMenu")" href="/orderappmenu/menu"><i
                                    class="fa-solid fa-bell-concierge me-2 ms-1"></i>Menu</a></li>
                    </ul>
                </div>


                <div class="dropdown me-3 my-1">
                    <button class="rounded-circle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="~/images/Default_pfp.svg.png" alt="Hi" class="rounded-circle" id="userProfileImage">
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li class="dropdown-item  d-flex align-items-center gap-3"><img
                                src="~/images/Default_pfp.svg.png" alt="Hi" id="userProfileImageDropdown"
                                class="rounded-circle">
                            <span id="username">Username</span>
                        </li>
                        <hr>

                        <li><button class="dropdown-item" type="button"><a
                                    class="d-flex align-items-center gap-2 nav-link"
                                    href="/Dashboard/Profile?from=order"><i
                                        class="fa-solid fa-circle-user"></i>Profile</a></button></li>
                        <li><button class="dropdown-item" type="button"><a
                                    class="d-flex align-items-center gap-2 nav-link" href="/Dashboard/Index"><i
                                        class="fa-solid fa-rotate-right"></i>Back To Dashboard</a></button></li>
                        <li><button type="button" class="dropdown-item d-flex align-items-center gap-2"
                                data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <i class="fa-solid fa-right-from-bracket"></i>Log Out</button></li>
                    </ul>
                </div>

            </div>

            <!-- Logout Modal -->
            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                                <span>Logout Confirmation</span>
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body text-center">
                            <img src="~/images/toppng.com-warning-icon-2400x2400.png" width="35px" alt="" class="mb-2">
                            <p>Are you sure you want to Logout?</p>
                        </div>
                        <div class="text-center mb-3">
                            <a href="@Url.Action("Logout","Dashboard")" type="button"
                                class="btn btn-primary bg-header me-2 rounded-0 px-3">Yes</a>
                            <button type="button"
                                class="btn text-primary bg-white text-header border-primary rounded-0 px-3"
                                data-bs-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>


        </div>


        <div class="rendered-body">

            @RenderBody()
            <partial name="_Notification" />

        </div>


    </div>

    <div id="screenLoader" class="loader-overlay" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>


    <script src="/js/custom.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"
        integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>

        window.addEventListener("beforeunload", function () {
            document.getElementById("screenLoader").style.display = "flex";
        });

        $(document).ajaxStart(function () {
            $("#screenLoader").show();
        }).ajaxStop(function () {
            $("#screenLoader").hide();
        });

        $(document).ready(function () {

            $.ajax({
                url: "/Dashboard/CurrentProfileImages",
                type: "GET",
                success: function (response) {

        @* console.log("response" , response.response.data.username) *@
                if (response.response.data.imageurl) {
                        $("#userProfileImage, #userProfileImageDropdown").attr("src", "/" + response.response.data.imageurl);
                    }

                    $("#username").html(response.response.data.username)

                },
                error: function () {
                    console.log("Failed to load user profile image.");
                }
            });

            toastr.options = {
                "preventDuplicates": true,
                "preventOpenDuplicates": true
            };

        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
