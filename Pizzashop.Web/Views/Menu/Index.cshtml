@{
    ViewData["Title"] = "Menu";
    Layout = "_DashboardLayout";
}

@{
    bool canEdit = bool.Parse(Context.Session.GetString("CanEdit") ?? "false");
    bool canDelete = bool.Parse(Context.Session.GetString("CanDelete") ?? "false");
}


@* TITLE *@
<div class="container-fluid">

    <div class="title d-flex flex-wrap justify-content-between align-items-center py-2 ms-2">
        <h2 class="text-header mb-3">Menu</h2>
    </div>

    <div>
        @* Menu Header *@
        <ul class="nav nav-underline tab-item" id="myTab" role="tablist">


            <li class="nav-item" role="presentation">
                <button id="items" class="nav-link text-dark active fs-5 toggle-section" type="button"
                data-bs-toggle="tab"
                data-bs-target="#category"><i
                        class="fa-solid fa-bars me-2"></i>Items</button>
            </li>

            <li class="nav-item ms-3" role="presentation">
                <button class="nav-link text-dark fs-5 toggle-section" id="modifiers" type="button" data-bs-toggle="tab"
                data-bs-target="#modifier-group"><i
                        class="fa-solid fa-table me-2"></i>Modifiers</button>
            </li>

        </ul>



        <div class="tab-content mt-3" id="pills-tabContent">
            <div class="tab-pane fade show active" id="category" role="tabpanel" aria-labelledby="pills-home-tab"
                tabindex="0">
            </div>

            <div class="tab-pane fade mt-3" id="modifier-group" role="tabpanel" aria-labelledby="pills-profile-tab"
                tabindex="0">
            </div>
        </div>


    </div>

</div>

@section Scripts {

    <script>

        $(document).ready(function () {

            var category = $("#category");
            var modifierGroup = $("#modifier-group")

            $(".toggle-section").click(function () {
                $(".toggle-section").removeClass("active");
                $(this).addClass("active");
            })


            $("#category").load('@Url.Action("GetCategories", "Menu")');
            $("#modifier-group").load('@Url.Action("GetModifierGroups", "Menu")');

            @* loadData("GetModifierGroups" , modifierGroup) *@

            function loadData(action, element) {

                $.ajax({
                    type: "GET",
                    url: `/Menu/${action}`,
                    success: function (data) {
                        @* console.log("Data :", data) *@
                        element.html(data);
                    }
                })
            }

        })

    </script>
}