@model Pizzashop.Entity.ViewModels.LoginFormModel

@{
    ViewData["title"] = "Login Page";
    Layout = "_LoginLayout";
}



<form asp-action="Login" asp-controller="Auth">

    <h5 class="mt-4">Welcome,</h5>


    <div class="mt-4 input-group ">
        <input asp-for="Email" class="form-control" id="emailId" placeholder="Email*">
        <span class="input-group-text" id="inputGroupPrepend1"><i class="fa-solid fa-user"></i></span>
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>

    <div class="mt-3 input-group">
        <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password*">
        <span class="input-group-text" id="inputGroupPrepend" onclick="eyeShow()"><i
        class="fa-regular fa-eye-slash"></i></span>
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>


    <div class="col-md-12 mt-3">
        <div class="d-flex justify-content-between">
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Remember me</label>
            </div>
            <div class=" ms-5">
                <a id="forget" asp-action="ForgetPassword">Forgot password?</a>
            </div>
        </div>
    </div>

    <button value="Login" type="submit" class="col-12 btn login-btn text-white">Login</button>


</form>

 @* <partial name="_ValidationScriptsPartial" /> *@

@section Scripts{
    <script>

            $(function(){
                $('#emailId').on("change", function () {
                var email = $(this).val();
                $('#forget').attr('href', '@Url.Action("ForgetPassword", "Auth")?email=' + encodeURIComponent(email));
                 
            });
            })

    </script>
}
