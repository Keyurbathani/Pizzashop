@model Pizzashop.Entity.ViewModels.ResetPasswordModel

@{
    ViewData["title"] = "ResetPassword";
    Layout = "_LoginLayout";

}

<form asp-action="ResetPassword" asp-controller="Auth">

    <h5 class="mt-4">Reset Your Password</h5>


    <div class="mt-4 input-group">
        <input asp-for="Email" type="hidden">
        <input asp-for="Token" type="hidden">
        <input asp-for="NewPassword" type="password" class="form-control" id="floatingPasswordOne"
            placeholder="New Password*">
        <span class="input-group-text" id="inputGroupPrepend1" onclick="eyeShow2()"><i id="eye-one"
                class="fa-regular fa-eye-slash"></i></span>
    </div>
    <span asp-validation-for="NewPassword" class="text-danger"></span>
    <div class="mt-3 input-group">
        <input type="password" asp-for="ConfirmPassword" class="form-control" id="floatingPasswordTwo"
            placeholder="Confirm New Password*">
        <span class="input-group-text" id="inputGroupPrepend2" onclick="eyeShow3()"><i id="eye-two"
                class="fa-regular fa-eye-slash"></i></span>
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <button type="submit" class="col-12 mt-3 btn login-btn text-white">Submit</button>

    <div class="mt-4">
        <a asp-action="Login">Back to Login</a>
    </div>

</form>
