@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Table and section";
}


@*  TITLE   *@
<div class="container-fluid">

    <div class="title d-flex flex-wrap justify-content-between align-items-center py-2 ms-2">
       <h2 class="text-header mb-3">Sections/Tables</h2>
    </div>

    
 
    <div id="section" class="mt-3">

        @* <partial name="_Section" /> *@  
      
    </div>
   

</div>

</div>

@section Scripts {

    <script>

        $(document).ready(function () {
            
            loadDataForIndex("GetSections");

            function loadDataForIndex(action) {
                $.ajax({
                    type: "GET",
                    url: `/Section/${action}`,
                    success: function (data) {
                        $("#section").html(data);
                        @* console.log("sections loded") *@
                    }
                })
            }

        })
        
    </script>
}


