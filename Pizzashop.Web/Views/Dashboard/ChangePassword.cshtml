@model Pizzashop.Entity.ViewModels.ChangePasswordModel

@{
    ViewData["title"] = "changePassword";
    Layout = "_DashboardLayout";
}

<div class="row justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="col-sm-4 col-10">
        <form asp-action="ChangePassword" asp-controller="Dashboard">
            <h5 class="mt-4 text-primary fs-2">Change Password</h5>
            <p class="mt-4">Enter new password to change account credentials</p>

            <div class="row">

                <div class="col-md-12">
                    <div class="mt-2 input-group">
                        <input type="password" asp-for="CurrentPassword" class="form-control" id="floatingPassword"
                            placeholder="CurrentPassword*">
                        <span class="input-group-text" id="inputGroupPrepend" onclick="eyeShow()">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <div class="mt-3 input-group">
                        <input type="password" asp-for="NewPassword" class="form-control" id="floatingPasswordOne"
                            placeholder="NewPassword*">
                        <span class="input-group-text" id="inputGroupPrepend1" onclick="eyeShow2()">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <div class="mt-3 input-group">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="floatingPasswordTwo"
                            placeholder="ConfirmPassword*">
                        <span class="input-group-text" id="inputGroupPrepend2" onclick="eyeShow3()">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>


            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn login-btn text-white">Submit</button>
                <a href="/dashboard/index" class="btn btn-secondary text-white">Cancel</a>    
            </div>

        </form>
    </div>
</div>
