@model Pizzashop.Entity.ViewModels.OrderDetailsVM;

@{
    Layout = "";
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OrderPDF</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .custom-body-text-color {
            color: #0066a7;
        }

        .custom-active-page-not-found-bg-color {
            background: #f9f9f9;
        }

        #logo {
            height: 60px;
            width: 60px;
        }

        p {
            margin: 0;
        }

        th {
            background-color: #0066a7 !important;
            color: white !important;
            padding: 8px !important;
            text-align: left;
        }

        .total {
            text-align: end;
        }

        .rows {
            border-bottom: 1px solid #dee2e6 !important;
        }

        .container-fluid {
            height: 100%;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        .top-class {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

        .details-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .customer-details {
            width: 45%;
        }

        .order-details {
            width: 45%;
            text-align: right;
        }

        .table-responsive {
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            margin-bottom: 0;
        }

        .table th,
        .table td {
            padding: 8px;
        }

        .summary-row {
            display: flex;
            flex-direction: column;
            padding: 4px 0;
            border-bottom:2px solid #0066a7;
        }

        .tax-summary {
            display: flex;
            gap: 5;
        }

        .payment-info {
            margin-top: 20px;
            margin-bottom: 30px;
        }

        .thank-you {
            text-align: center;
            margin-top: 30px;
            color: #0066a7;
            font-weight: bold;
        }

        .total-amount-due {
            font-weight: bold;
            color: #0066a7;
            margin-top: 10px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .amount-value {
            text-align: right;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="top-class">
            <img src="http://localhost:5155/images/logos/pizzashop_logo.png" id="logo" alt="header-logo">
            <h1 class="mb-0 custom-body-text-color ms-2">PIZZASHOP</h1>
        </div>

        <div class="details-container">
            <div class="customer-details">
                <h5 class="custom-body-text-color">Customer Details</h5>
                <p>Name: @Model.CustomerDetails.Name</p>
                <p>Mob: @Model.CustomerDetails.Phone</p>
            </div>
            <div class="order-details">
                <h5 class="custom-body-text-color">Order Details</h5>
                <p>Invoice Number: #@Model.InvoiceNumber</p>
                <p>Date: @Model.PlacedOn.ToString("dd-MM-yyyy HH:mm")</p>
                <p>Section: @Model.SectionName</p>
                <p>Table: @string.Join(", ", Model.TablesName)</p>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sr.No.</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                    }
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr class="rows">
                            <td>@i</td>
                            <td>
                                <div>
                                    <p>@item.Name</p>
                                    @foreach (var modfier1 in item.OrderModifiers)
                                    {
                                        <p>@modfier1.Name</p>
                                    }
                                </div>
                            </td>
                            <td>
                                <div>
                                    <p>@item.Quantity</p>
                                    @foreach (var modfier1 in item.OrderModifiers)
                                    {
                                        <p>@modfier1.Quantity</p>
                                    }
                                </div>
                            </td>
                            <td>
                                <div>
                                    <p> ₹ @item.Price</p>
                                    @foreach (var modfier1 in item.OrderModifiers)
                                    {
                                        <p> ₹ @modfier1.Price.ToString("N2")</p>
                                    }
                                </div>
                            </td>
                            <td class="total">
                                <div>
                                    <p> ₹ @item.ItemTotal</p>
                                    @foreach (var modfier1 in item.OrderModifiers)
                                    {
                                        <p> ₹ @modfier1.TotalAmount.ToString("N2")</p>
                                    }
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>

        <div class="summary-row">


            <div class="tax-summary">
                <span>Sub Total:</span><span> &nbsp;&nbsp;&nbsp;&nbsp; ₹ @Model.SubTotal.ToString("N2")</span>
            </div>
           


            @foreach (var tax in Model.OrderTaxes)
            {
                <div class="tax-summary order-tax" data-id="@tax.Id"
                    data-type="@tax.Type" data-rate="@tax.Rate">@tax.Name:<span><span class="tax-amount"> &nbsp;&nbsp;&nbsp;&nbsp; ₹
                            @tax.TotalTax.GetValueOrDefault().ToString("N2")</span></span></div>
            }




            <div class="tax-summary TotalAmount">
                <span>Total:</span><span>&nbsp;&nbsp;&nbsp;&nbsp; ₹ @Model.TotalAmount.ToString("N2")</span>
            </div>


        </div>

        <div class="payment-info">
            <h5 class="custom-body-text-color">Payment Information</h5>
            <p>Payment Method: @Model.PaymentMethod</p>
        </div>

        <div class="thank-you">
            <h4>THANK YOU!</h4>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>