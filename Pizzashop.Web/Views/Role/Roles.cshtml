

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Roles And Permissions";
}

@{
    bool canEdit = bool.Parse(Context.Session.GetString("CanEdit") ?? "false");
    bool canDelete = bool.Parse(Context.Session.GetString("CanDelete") ?? "false");
}

@model IEnumerable<Pizzashop.Entity.ViewModels.RoleVM>;


<div class="d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="table-responsive" style="width: 80%; max-width: 800px;">
        <table class="w-100 bg-white">
            <thead>
                <tr style="border-bottom: 1px solid #e9e9e9;">
                    <th class="p-2 fs-5 text-start" style="font-weight: 500;">Role</th>
                    <th class="p-2 fs-5 text-end" style="font-weight:500;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr style="border-bottom: 1px solid #e9e9e9;">
                        <td class="p-2 text-start">@role.Name</td>
                        <td class="p-2 text-end">
                            <a asp-action="Permissions" asp-route-id="@role.Id">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
